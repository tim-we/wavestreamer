FROM raspbian/stretch

# Install Go manually (Raspbian doesn't package it reliably, claims ChatGPT)
ENV GOLANG_VERSION 1.24.2

RUN apt-get update && apt-get install -y \
    curl \
    git \
    pkg-config \
    libportaudio-dev \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Go manually
RUN curl -L https://golang.org/dl/go${GOLANG_VERSION}.linux-arm64.tar.gz | tar -C /usr/local -xz
ENV PATH="/usr/local/go/bin:$PATH"

COPY . .

ENV GO111MODULE=on
ENV CGO_ENABLED=1
ENV GOOS=linux
ENV GOARCH=arm64

RUN go build -v -o wavestreamer ./wavestreamer.go
